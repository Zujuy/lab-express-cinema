<div class='detailcontain'>

<div class="imageMovie">
  <img src="{{image}}" alt="singleMovieIMG">
</div>

<div clas="boton2div">
<a href="/movies" class="boton2" >Go back</a>
</div>

<div class="singleInfo">
  <h1>{{title}}</h1><br/>
  <h2>Director: {{director}}</h2><br/>
  <h2>Stars</h2><br>
  {{#each stars as |star|}}
    <li>{{star}}</li>
  {{/each}} <br/>
  <p>{{description}}</p> <br/>
  {{#each showtimes as |showtime|}}
    {{showtime}} |
  {{/each}}
</div>

</div>